<!doctype html>
<html lang="{{ site.language | default('en') }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if title %}{{ title }} · {% endif %}{{ site.title }}</title>
    <meta name="description" content="{{ description or site.description }}" />
    <link rel="canonical" href="{{ site.url }}{{ env.base }}{{ page.url }}" />
    <meta property="og:title" content="{% if title %}{{ title }} · {% endif %}{{ site.title }}" />
    <meta property="og:description" content="{{ description or site.description }}" />
    <meta property="og:url" content="{{ site.url }}{{ env.base }}{{ page.url }}" />
    <meta property="og:type" content="{% if layout == 'layouts/post.njk' %}article{% else %}website{% endif %}" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#0ea5e9" />
    <link rel="icon" href="{{ env.base }}/assets/favicon.svg" type="image/svg+xml" />
    <link rel="alternate" type="application/rss+xml" href="{{ env.base }}/feed.xml" title="{{ site.title }}" />
    <link rel="stylesheet" href="{{ env.base }}/assets/styles.css" />
    <script src="{{ env.base }}/assets/site.js" defer></script>
  </head>
  <body>
    <div id="progress" aria-hidden="true"></div>
    <script>
      // Initialize theme early to avoid flash
      (function(){
        try {
          const saved = localStorage.getItem('theme');
          if(saved){ document.documentElement.setAttribute('data-theme', saved); }
        } catch(e) {}
      })();
    </script>
    {% include "components/header.njk" %}
    <main class="container">
      {{ content | safe }}
    </main>
    {% include "components/footer.njk" %}

    {# Analytics (Plausible or Umami) configurable via site._data #}
    {% if site.analytics and site.analytics.provider == 'plausible' and site.analytics.domain %}
      <script defer data-domain="{{ site.analytics.domain }}" src="https://plausible.io/js/script.js"></script>
    {% elif site.analytics and site.analytics.provider == 'umami' and site.analytics.src and site.analytics.website_id %}
      <script async defer data-website-id="{{ site.analytics.website_id }}" src="{{ site.analytics.src }}"></script>
    {% endif %}
  </body>
  </html>
