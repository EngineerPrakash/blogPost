<!doctype html>
<html lang="{{ site.language | default('en') }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if title %}{{ title }} · {% endif %}{{ site.title }}</title>
    <meta name="description" content="{{ description or site.description }}" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Merriweather:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="canonical" href="{{ site.url }}{{ env.base }}{{ page.url }}" />
    <meta property="og:title" content="{% if title %}{{ title }} · {% endif %}{{ site.title }}" />
    <meta property="og:description" content="{{ description or site.description }}" />
    <meta property="og:url" content="{{ site.url }}{{ env.base }}{{ page.url }}" />
    <meta property="og:type" content="{% if layout == 'layouts/post.njk' %}article{% else %}website{% endif %}" />
    {% if cover %}
    <meta property="og:image" content="{{ site.url }}{{ env.base }}{{ cover }}" />
    <meta name="twitter:image" content="{{ site.url }}{{ env.base }}{{ cover }}" />
    {% else %}
    <meta property="og:image" content="{{ site.url }}{{ env.base }}/assets/favicon.svg" />
    <meta name="twitter:image" content="{{ site.url }}{{ env.base }}/assets/favicon.svg" />
    {% endif %}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#0ea5e9" />
    <link rel="icon" href="{{ env.base }}/assets/favicon.svg" type="image/svg+xml" />
    <link rel="alternate" type="application/rss+xml" href="{{ env.base }}/feed.xml" title="{{ site.title }}" />
    <link rel="stylesheet" href="{{ env.base }}/assets/styles.css" />
    {# Prism.js for syntax highlighting #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prismjs@1/themes/prism.min.css">
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1/prism.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1/plugins/autoloader/prism-autoloader.min.js" defer></script>
    <script src="{{ env.base }}/assets/site.js" defer></script>
  </head>
  <body>
    <div id="progress" aria-hidden="true"></div>
    <script>
      // Initialize theme early to avoid flash
      (function(){
        try {
          const saved = localStorage.getItem('theme');
          if(saved){ document.documentElement.setAttribute('data-theme', saved); }
        } catch(e) {}
      })();
    </script>
    {% include "components/header.njk" %}
    <div class="container layout">
      <main>
        {{ content | safe }}
      </main>
      {% include "components/sidebar.njk" %}
    </div>
    {% include "components/footer.njk" %}

    {# Analytics (Plausible or Umami) configurable via site._data #}
    {% if site.analytics and site.analytics.provider == 'plausible' and site.analytics.domain %}
      <script defer data-domain="{{ site.analytics.domain }}" src="https://plausible.io/js/script.js"></script>
    {% elif site.analytics and site.analytics.provider == 'umami' and site.analytics.src and site.analytics.website_id %}
      <script async defer data-website-id="{{ site.analytics.website_id }}" src="{{ site.analytics.src }}"></script>
    {% endif %}
  </body>
  </html>
