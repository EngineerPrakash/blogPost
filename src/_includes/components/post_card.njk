<article class="post-card">
  <h2><a href="{{ env.base }}{{ post.url }}">{{ post.data.title }}</a></h2>
  <p class="meta">
    <time datetime="{{ post.date | htmlDateString }}">{{ post.date | date }}</time>
    {% if post.data.tags %} Â· {{ post.data.tags | join(', ') }}{% endif %}
  </p>
  {% if post.data.description %}
    <p>{{ post.data.description }}</p>
  {% endif %}
</article>
